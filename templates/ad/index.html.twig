{% extends 'base.html.twig' %}

{% block title %}Nos magnifiques annonces{% endblock %}

{% block body %}

    <div class="container mt-5 mb-5">

        <h1 class="my-3">Voici les annonces de nos hôtes</h1>

        <div class="row">
        
            {% for ad in ads %}

            {% set url_slug = path('ads_show', {slug: ad.slug}) %}

            <div class="col-md-4">

                    <div class="card bg-light mb-3 g-0 border rounded overflow-hidden  shadow-sm h-md-250">

                        <div class="card-header text-center">

                            {{ ad.rooms }} chambres, <strong>{{ ad.price }}&euro; /nuit</strong> <br>

                            <small>Pas encore noté</small>

                        </div>

                        <a href="{{url_slug}}">
                        
                            <img src="https://prod-saint-gobain-fr.content.saint-gobain.io/sites/saint-gobain.fr/files/2020-10/moderniser-appartement-la-maison-saint-gobain.jpg" alt="Image de l'appartement" style="height:200px; width: 100%; block">
                        
                        </a>


                        <div class="card-body">

                            <h4 class="card-title">

                            <a href="{{url_slug}}">
                            
                                {{ ad.title }}

                            </a>

                            </h4>

                            <p class="card-text">

                                {{ ad.introduction }}

                            </p>

                            <a href="{{url_slug}}" class="btn btn-primary">En savoir plus</a>

                        </div>

                    </div>

                </div>

            {% endfor %}

        </div>
        
    </div>

{% endblock %}
