{% extends "admin/base.html.twig" %}

{% block title %}Modification du commentaire n° {{ comment.id }}{% endblock %}

{% form_theme form _self %}

{% block body %}

    <div class="container">
    
        <h1 class="my-5">Modification du commentaire n° <span class="badge bg-info">{{ comment.id }}</span></h1>

        
        <div class="alert alert-info mb-3">

            <strong>Annonce liée : </strong>{{comment.ad.title }}
            <strong>Auteur : </strong>{{comment.author.fullName }} <br>
            <strong>Date de création : </strong>{{comment.createdAt | date('d/m/Y H:i') }}<br>
            <strong>Note donnée : </strong>{{comment.rating }}<br>
        
        </div>

        {{ form_start(form) }}

        {{ form_widget(form) }}

        <button class="btn btn-primary">

            <i class="fas fa-save"></i>
            
            Enregistrer les modifications
        
        </button>

        {{ form_end(form) }}

    </div>


{% endblock %}